{
  "name": "@repo/utils",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Shared utility functions for the POS system",
  "scripts": {
    "build": "npm run clean && tsup && tsc-alias",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "test": "jest"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.4",
    "dayjs": "^1.11.13",
    "zod": "^3.23.8",
    "tailwind-variants": "^0.3.0"
  },
  "devDependencies": {
    "@repo/typescript-config": "*",
    "@types/node": "^20.11.24",
    "typescript": "^5.3.3",
    "rimraf": "^6.0.1",
    "tsc-alias": "^1.8.10",
    "tsup": "^8.2.4",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12"
  }
}